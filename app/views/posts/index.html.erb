<div class="w-full">
  <% content_for :title, "Posts" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Posts</h1>
    <% if current_user %>
      <%= link_to "New post", new_post_path, class: "btn btn-primary rounded-lg" %>
    <% end %>
  </div>
  <div id="posts" class="min-w-full">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post, class: "btn btn-secondary mb-10 ml-5" %>
      </p>
    <% end %>
  </div>
</div>
