<div id="<%= dom_id post %>" class="p-5 bg-base-200 my-5 rounded-xl">
  <h1 class="block text-2xl my-5"><%= post.title %></h1>
  <h2 class="block text-sm mb-1 my-5">Posted by: <%= link_to post.user.name, user_path(post.user), class: "font-bold p-1 rounded-lg hover:cursor-pointer hover:bg-neutral" %></h2>
  <h3 class="block text-base mb-1 my-5">Total Views: <%= post.views %></h3>
  <div class="my-5">
    <%= post.body %>
  </div>
</div>
